<div class="container p-4">
    <div class="row">
        {{#each contacts}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{name}}
                            </h3>
                        </a>
                        <p class="m-2">{{address}}</p>
                        <p class="m-2">{{phone}}</p>
                        <p class="m-2">{{email}}</p>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/contacts/delete/{{id}}" class="btn btn-danger">Delete</a>
                        <a href="/contacts/edit/{{id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <h4>There are not links</h4>
                    <a href="/contacts/add" class="btn btn-success mt-4">Create One!</a>
                </div>
            </div>    
        {{/each}}
    </div>
</div>